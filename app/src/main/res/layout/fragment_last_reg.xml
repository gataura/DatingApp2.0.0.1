<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffcfe2 ">

        <ImageView
                android:src="@drawable/heart"
                android:layout_width="102dp"
                android:layout_height="96dp"
                android:id="@+id/imageView12"
                android:rotation="15" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.674" app:layout_constraintVertical_bias="0.111"
                app:layout_constraintTop_toBottomOf="@+id/imageView13"/>
        <ImageView
                android:src="@drawable/heart"
                android:layout_width="102dp"
                android:layout_height="96dp"
                android:id="@+id/imageView13"
                android:rotation="5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.76"
                app:layout_constraintVertical_bias="0.061"/>
        <Button
                android:background="?attr/selectableItemBackground"
                android:drawableEnd="@drawable/arrow_right_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/second_next_button2"
                android:drawableRight="@drawable/arrow_right_24"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/terms_and_cond2" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="@string/terms_and_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms_and_cond2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/agree_checkbox"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.39" app:layout_constraintVertical_bias="0.0"
                android:textSize="16sp"/>
        <CheckBox
                android:text="@string/agreement_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agree_checkbox"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintVertical_bias="0.636" android:textSize="16sp"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.632" app:layout_constraintVertical_bias="0.095"
                android:id="@+id/radioGroupLasPage">

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Я ищу разовые встречи для отдыха" android:id="@+id/one_time_radio"
                    android:checked="true" android:clickable="true" android:textSize="18sp"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Я ищу серьезные отношения" android:id="@+id/serious_radio" android:clickable="true"
                    android:textSize="18sp"/>
        </RadioGroup>
        <TextView
                android:text="Что для вас предпочтительнее?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.485" app:layout_constraintVertical_bias="0.357"
                android:textSize="22sp"/>
        <ImageView
                android:src="@drawable/heart"
                android:layout_width="125dp"
                android:layout_height="127dp"
                android:id="@+id/imageView10" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintVertical_bias="0.0" android:rotation="20"/>
        <ImageView
                android:src="@drawable/heart"
                android:layout_width="79dp"
                android:layout_height="70dp"
                android:id="@+id/imageView11"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.228" app:layout_constraintVertical_bias="1.0"
                android:rotation="-15" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"/>
        <ImageView
                android:src="@drawable/heart"
                android:layout_width="132dp"
                android:layout_height="125dp"
                android:id="@+id/imageView16" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/agree_checkbox" app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintVertical_bias="0.695" android:rotation="-20"/>
        <ImageView
                android:src="@drawable/heart"
                android:layout_width="102dp"
                android:layout_height="95dp"
                android:id="@+id/imageView17" android:rotation="15"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage"
                app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/terms_and_cond2" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.594" app:layout_constraintVertical_bias="0.628"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
